@model List<UserDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-xxl flex-grow-1 container-p-y">

    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">Kullanıcı Yönetimi / </span> Kullanıcılar
    </h4>

    <div class="card">
        <h5 class="card-header"> Table Basic</h5>
        <div class="table-responsive text-nowrap m-3">

            <a class="btn btn-primary mb-3" asp-area="Admin" asp-controller="User" asp-action="Add">Kullanıcı Ekle <i class="bx bx-plus"></i></a>

            <table class="table table-bordered" id="userDataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Ad</th>
                        <th>Soyad</th>
                        <th>E-Posta</th>
                        <th>E-Posta Doğrulaması</th>
                        <th>Telefon</th>
                        <th>Rol</th>
                        <th>Bağlantı Hataları</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Ad</th>
                        <th>Soyad</th>
                        <th>E-Posta</th>
                        <th>E-Posta Doğrulaması</th>
                        <th>Telefon</th>
                        <th>Rol</th>
                        <th>Bağlantı Hataları</th>
                        <th>İşlemler</th>
                    </tr>
                </tfoot>
                <tbody class="table-border-bottom-0">
                    @foreach (var item in Model)
                    {
                        <tr name="@item.Id">
                            <td>@item.FirstName</td>
                            <td>@item.LastName</td>
                            <td>@item.Email</td>
                            <td>@(item.EmailConfirmed ? "Doğrulanmış" : "Doğrulanmamış")</td>
                            <td>@item.PhoneNumber</td>
                            <td>@item.Role</td>
                            <td>@item.AccessFailedCount</td>
                            <td>
                                <a class="btn btn-warning btn-sm" data-id="@item.Id" asp-area="Admin" asp-controller="User" asp-action="Update" asp-route-userId="@item.Id">
                                    <i class="bx bx-edit"></i>
                                </a>
                                <a class="btn btn-danger btn-sm" data-id="@item.Id" asp-area="Admin" asp-controller="User" asp-action="Delete" asp-route-userId="@item.Id">
                                    <i class="bx bx-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>

@section Scripts {
    <script src="~/js/userindex.js"></script>
}
