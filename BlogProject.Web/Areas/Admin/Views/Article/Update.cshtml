@model ArticleUpdateDto
@{
    ViewData["Title"] = "Makale Güncelle";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-xxl flex-grow-1 container-p-y">

    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">Makale Yönetimi / </span> Makale Güncelle
    </h4>

    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <h5 class="card-header"></h5>
                <form asp-area="Admin" asp-controller="Article" asp-action="Update" method="post" enctype="multipart/form-data">
                    <div class="card-body">
                        <input type="hidden" asp-for="Id" />
                        <div class="mb-3">
                            <select asp-for="CategoryId" id="categoryList" class="form-control" asp-items="@(new SelectList(Model.Categories,"Id","Name"))"></select>
                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Title" class="form-label">Başlık</label>
                            <input asp-for="Title" type="text" class="form-control" id="defaultFormControlInput" placeholder="Başlık giriniz" aria-describedby="defaultFormControlHelp" />
                            <span asp-for="Title" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Content" class="form-label">İçerik</label>
                            <textarea asp-for="Content" type="text" class="form-control" id="defaultFormControlInput" style="min-height:300px;" placeholder="John Doe" aria-describedby="defaultFormControlHelp"></textarea>
                            <span asp-validation-for="Content" class="text-danger"></span>
                        </div>
                        <div class="row">
                            <div class="mb-5 col-md-4">
                                <label asp-for="Image.FileName" class="form-label d-block">Mevcut Resim</label>
                                <img src="~/images/@Model.Image.FileName" style="height:20em; width:20em;" alt="@Model.Title" />
                            </div>
                            <div class="mb-5 col-md-8">
                                <label asp-for="Photo" class="form-label">Resim Seçiniz</label>
                                <input asp-for="Photo" type="file" class="form-control" id="defaultFormControlInput" aria-describedby="defaultFormControlHelp">
                                <span asp-validation-for="Photo" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="mb-3">
                            <button type="submit" class="btn btn-success">Güncelle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
