@model List<ArticleDto>
@{
    ViewData["Title"] = "DeletedArticle";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="container-xxl flex-grow-1 container-p-y">

    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">Çöp Kutusu/ </span> Makaleler
    </h4>

    <div class="card">
        <h5 class="card-header"> Table Basic</h5>
        <div class="table-responsive text-nowrap m-3">

            <table class="table table-bordered" id="articleUndoDataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Başlık</th>
                        <th>Kategori</th>
                        <th>Oluşturan</th>
                        <th>Oluşturma Tarihi</th>
                        <th>Durum</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Başlık</th>
                        <th>Kategori</th>
                        <th>Oluşturan</th>
                        <th>Oluşturma Tarihi</th>
                        <th>Durum</th>
                        <th>İşlemler</th>
                    </tr>
                </tfoot>
                <tbody class="table-border-bottom-0">
                    @foreach (var item in Model)
                    {
                        <tr name="@item.Id">
                            <td>@item.Title</td>
                            <td>@item.Category.Name</td>
                            <td>@item.CreatedBy</td>
                            <td>@item.CreatedDate.ToString("dd/MM/yyyy")</td>
                            <td>@(item.IsDeleted ? "Aktif Değil" : "Aktif")</td>
                            <td>
                                <a class="btn btn-info btn-sm" data-id="@item.Id" asp-area="Admin" asp-controller="Article" asp-action="UndoDelete" asp-route-articleId="@item.Id">
                                    <i class="bx bx-undo"></i>
                                </a>
                                @*<a class="btn btn-danger btn-sm" data-id="@item.Id" asp-area="Admin" asp-controller="Article" asp-action="Delete" asp-route-articleId="@item.Id">
                            <i class="bx bx-trash"></i>
                            </a>*@
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>

@section Scripts {
    <script src="~/js/articleundodeleted.js"></script>
}
